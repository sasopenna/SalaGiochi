<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<!-- campi: assegnazione.prenotazione assegnazione.cassiere.idDipendente assegnazione.orario assegnazione.costo  -->
	
	<field name="assegnazione.prenotazione">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<message key="validator.int_min" />
		</field-validator>
	</field>
	
	<field name="assegnazione.cassiere.idDipendente">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<message key="validator.int_min" />
		</field-validator>
	</field>
	
	<field name="assegnazione.costo">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="double">
			<param name="minInclusive">0</param>
			<message key="validator.double_min" />
		</field-validator>
	</field>
	
	<field name="assegnazione.orario">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
	</field>
</validators>