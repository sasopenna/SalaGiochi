<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN" "https://struts.apache.org/dtds/struts-6.0.dtd">

<struts>
    <package name="api" namespace="/API" extends="default">
		<action name="Home" class="pwm.penna.action.homepage.home.Home">
			<result type="json" name="success" />
		</action>
		
		<action name="Statistiche" class="pwm.penna.action.homepage.statistiche.Statistiche">
			<result type="json" name="success">
				<param name="excludeProperties">
					<!-- top5 -->
					top5.*.cliente,
					top5.*.profilo.account,
					top5.*.profilo.socio,
					top5.*.profilo.dipendente,
					
					<!-- fedeli5 -->
					fedeli5.*.cliente,
					fedeli5.*.profilo.account,
					fedeli5.*.profilo.socio,
					fedeli5.*.profilo.dipendente
				</param>
			</result>
		</action>
		
		<action name="SaleGiochi" class="pwm.penna.action.homepage.dovesiamo.DoveSiamo">
			<result type="json" name="success">
				<param name="excludeProperties">
					sale.*.dirigenti,
					sale.*.postazioni
				</param>
			</result>
		</action>
		
		<action name="Soci"  class="pwm.penna.action.amministrazione.dirigente.socio.lista.SocioLista">
			<result type="json" name="success">
				<param name="excludeProperties">
					soci.*.cliente,
					soci.*.profilo.account,
					soci.*.profilo.soci,
					soci.*.profilo.dipendente
				</param>
			</result>
		</action>
		
		<action name="Dipendenti"  class="pwm.penna.action.json.Dipendenti">
			<result type="json" name="success">
				<param name="excludeProperties">
					<!-- profilo -->
					dipendenti.*.profilo.account,
					dipendenti.*.profilo.soci,
					dipendenti.*.profilo.dipendente,
					
					<!-- tecnico -->
					dipendenti.*.riparazioni,
					
					<!-- cassieri -->
					dipendenti.*.assegnazioni,
					dipendenti.*.salaGiochi.dirigenti,
					dipendenti.*.salaGiochi.postazioni,
					
					<!-- dirigenti -->
					dipendenti.*.sale.*.dirigenti,
					dipendenti.*.sale.*.postazioni,
					
					<!-- altro -->
					dipendenti.*.cassiere,
					dipendenti.*.dirigente,
					dipendenti.*.tecnico,
				</param>
			</result>
		</action>
	</package>
</struts>
