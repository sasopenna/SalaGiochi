<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<!-- campi: richiesta.prenotazione richiesta.cliente.numeroCliente richiesta.postazione.numero richiesta.durata  -->
	
	<field name="richiesta.prenotazione">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<message key="validator.int_min" />
		</field-validator>
	</field>
	
	<field name="richiesta.cliente.numeroCliente">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<message key="validator.int_min" />
		</field-validator>
	</field>
	
	<field name="richiesta.postazione.numero">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="int">
			<param name="min">0</param>
			<message key="validator.int_min" />
		</field-validator>
	</field>
	
	<field name="richiesta.durata">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
	</field>
</validators>