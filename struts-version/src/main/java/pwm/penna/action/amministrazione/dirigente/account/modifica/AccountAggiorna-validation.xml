<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<!-- campi: accounts.email accounts.password accounts.ultimoLogin -->
	<!-- il campo ultimoLogin lo valida di "default" struts -->
	
	<field name="accounts.email">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="email">
			<message key="validator.email" />
		</field-validator>
	</field>
	
	<field name="accounts.password">
		<field-validator type="required">
			<message key="validator.required" />
		</field-validator>
		<field-validator type="password">
			<message key="validator.password" />
		</field-validator>
	</field>
</validators>